<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FunctionFragment"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/preferences_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferences_lbl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="@string/precision"
                android:textColor="@color/colorButtonText" />

            <EditText
                android:id="@+id/precision_text"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor"
                tools:text="20" />

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_precision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_precision" />

        <Switch
            android:id="@+id/degrees_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/degrees_switch" />

        <TextView
            android:id="@+id/lbl_degrees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_degrees" />

    </LinearLayout>
</ScrollView>