                style="@android:style/Widget.Material.Light.Button"
                android:id="@+id/btn_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/b" />

            <Button
                style="@android:style/Widget.Material.Light.Button"
                android:id="@+id/btn_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/c" />

            <Button
                style="@android:style/Widget.Material.Light.Button"
                android:id="@+id/btn_d"
